{
  "name": "functions",
  "scripts": {
    "lint": "eslint \"src/**/*\"",
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest --clearCache && jest",
    "test:watch": "jest --clearCache && jest --watchAll",
    "_comment": "use the 'getCustomConfig' to retrieve config which will also includes stripe token",
    "getCustomConfig": "firebase functions:config:get > .runtimeconfig.json"
  },
  "engines": {
    "node": "12"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^8.10.0",
    "firebase-functions": "^3.6.1",
    "stripe": "^8.102.0",
    "kaltura-typescript-client": "file:kaltura-typescript-client-7.0.2.tgz"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/stripe": "^7.13.24",
    "firebase-functions-test": "^0.2.0",
    "jest": "^25.5.4",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "^2.22.0",
    "typescript": "^3.8.0"
  },
  "private": true
}
