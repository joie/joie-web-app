{
  "name": "functions",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest --clearCache && jest",
    "test:watch": "jest --clearCache && jest --watchAll",
    "_comment": "use the 'getCustomConfig' to retrieve config which will also includes stripe token",
    "getCustomConfig": "firebase functions:config:get > .runtimeconfig.json"
  },
  "engines": {
    "node": "12"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/logging": "^7.2.3",
    "firebase-admin": "~8.9.2",
    "firebase-functions": "^3.11.0",
    "stripe": "^8.102.0"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/stripe": "^7.13.24",
    "firebase-functions-test": "^0.1.7",
    "jest": "^25.5.4",
    "ts-jest": "^25.5.1",
    "tslint": "^5.12.0",
    "typescript": "^3.9.7"
  },
  "private": true
}
